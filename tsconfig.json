{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "importHelpers": true,
      "isolatedModules": true,
      "noEmit": true,
      "types": ["vite/client","vuetify"]
    },
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "references": [{ "path": "./tsconfig.node.json" }],
  }